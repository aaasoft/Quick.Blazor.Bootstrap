@using Quick.Fields

<th class="@ControlUtils.GetCommonClass(Field)" style="@Field.Html_Style" rowspan="@Field.ContainerTableTd_RowSpan" colspan="@Field.ContainerTableTd_ColSpan">
    @Field.Value
    @if (Field.Children != null)
    {
        @foreach (var child in Field.Children)
        {
            <Control Field="@child" />
        }
    }
</th>

@code
{
    [Parameter]
    public FieldForGet Field { get; set; }
}