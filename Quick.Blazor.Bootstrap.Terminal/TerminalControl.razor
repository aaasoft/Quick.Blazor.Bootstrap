@inherits ComponentBase_WithGettextSupport;
@using XtermBlazor

<div class="btn-toolbar m-2" role="toolbar" aria-label="Toolbar with button groups">
    @if (OtherButtons != null)
    {
        <div class="btn-group mr-2" role="group" aria-label="First group">
            @foreach (var button in OtherButtons)
            {
                <button type="button" class="btn btn-sm btn-secondary mr-1" @onclick="button.Value">
                    @button.Key
                </button>
            }
        </div>
    }
    <div class="btn-group mr-2" role="group" aria-label="First group">
        <button type="button" class="btn btn-sm btn-secondary" @onclick="newShell">@TextOpen</button>
        <button type="button" class="btn btn-sm btn-secondary" @onclick="killShell">@TextClose</button>
    </div>
    <div class="input-group input-group-sm mr-2">
        <div class="input-group-prepend">
            <div class="input-group-text" id="btnGroupAddon">@TextColumn</div>
        </div>
        <input type="number" class="form-control" @bind-value="ActualColumns">
    </div>
    <div class="input-group input-group-sm">
        <div class="input-group-prepend">
            <div class="input-group-text" id="btnGroupAddon">@TextRow</div>
        </div>
        <input type="number" class="form-control" @bind-value="ActualRows">
    </div>
</div>
<div>
    <Xterm @ref="terminal" Options="terminalOptions" OnFirstRender="@OnFirstRender" OnData="OnData" />
</div>