<Modal Visiable="Visiable" DialogBackdropVisiable DialogCentered>
    <TitleContent>@Title</TitleContent>
    <HeaderContent>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="Close">
            <span aria-hidden="true">×</span>
        </button>
    </HeaderContent>
    <BodyContent>
        <p>@Content</p>
    </BodyContent>
    <FooterContent>
        <button type="button" class="btn btn-primary" @onclick="Ok">确定</button>
        @if (OkCallback != null)
        {
            <button type="button" class="btn btn-secondary" data-dismiss="modal" @onclick="Cancel">取消</button>
        }
    </FooterContent>
</Modal>