<div aria-live="polite" class="d-flex" aria-atomic="true" style="position: relative;z-index:99999;">
    <div style="position: absolute; top: 0; right: 0;">
        @foreach (var id in dict.Keys)
        {
            <div class="toast" role="alert" style="opacity:1;" aria-live="assertive" aria-atomic="true">
                <div class="toast-header">
                    <span class="badge mr-2 badge-@dict[id].ToastBg">@(dict[id].ToastBg.ToString().ToUpper()[0])</span>
                    <strong class="mr-auto">@dict[id].Title</strong>
                    @if (dict[id].Time != null)
                    {
                        <small class="text-muted">@dict[id].Time</small>
                    }
                    <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close" @onclick="@(e => CloseToast(id))">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="toast-body">
                    @dict[id].Content
                </div>
            </div>
        }
    </div>
</div>
