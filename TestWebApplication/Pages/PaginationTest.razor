<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">First</th>
            <th scope="col">Last</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in users.Skip(Offset).Take(PageSize))
        {
            <tr>
                <th scope="row">@item.Index</th>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
            </tr>
        }
    </tbody>
</table>
<Pagination @bind-PageSize="PageSize" @bind-Offset="Offset" RecordCount="@users.Length"
            FirstPageText="首页" PreviousPageText="上一页" NextPageText="下一页" LastPageText="尾页" RecordCountText="记录:" PageText="页:">
</Pagination>